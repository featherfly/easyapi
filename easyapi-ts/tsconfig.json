{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "/*": ["./*"],
      "src/*": ["src/*"],
      "@/*": ["src/*"]
    },
    "lib": ["es6", "dom"],
    "types": ["node", "uni-app"],
    "declaration": true,
    "outDir": "lib",
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/**/*.js"],
  "exclude": ["lib", "test"]
}
